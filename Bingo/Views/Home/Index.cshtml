@using Bingo.ViewModels;
@model CartonViewModel
@{
    ViewData["Title"] = "Home Page";
}
<div class="row">
    <div class="col-sm-6">
        <label id="labelCarton1"></label>
        <div class="text-center carton1">
           @foreach (var item in Model.Carton1)
